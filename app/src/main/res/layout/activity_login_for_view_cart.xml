<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".signin.LoginActivityForViewCart">

    <LinearLayout
        android:id="@+id/loginBlockAtViewCart"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/background_gradiant"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/White"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/loginMobileNoAtViewCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextLMAtViewCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_mobile"
                android:paddingLeft="5dp"
                android:hint="Mobile Number"
                android:textColorHint="@color/GreenSignup"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/loginPasswordAtViewCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:passwordToggleEnabled="true"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editTextLPAtViewCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="@color/GreenSignup"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:visibility="invisible"
                android:id="@+id/loginForgetPasswordAtViewCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ForgetPassword?"
                android:textColor="@color/GreenSignup"
                android:layout_alignParentEnd="true"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnLoginAtViewCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:layout_below="@id/loginForgetPasswordAtViewCart"
                android:onClick="OnlickLoginAtViewCart"
                android:textColor="@color/White"
                android:background="@drawable/rec_gradiant"
                android:text="SignIn"

                />
           <!-- <TextView
                android:id="@+id/haventaccAtViewCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Haven't Account "
                android:textColor="@color/GreenSignup"
                android:layout_marginTop="8dp"
                android:layout_below="@id/btnLoginAtViewCart"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register?"
                android:textColor="#ff0000"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/btnLoginAtViewCart"
                android:layout_toRightOf="@id/haventaccAtViewCart"
                android:layout_marginLeft="5dp"
                />
-->
        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>