<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White"
    android:id="@+id/signup_Parrent_At_ViewCart"
    tools:context=".fragment.RegisterUserAtCartActivity">

    <ImageView
        android:layout_width="@dimen/hundred_dp"
        android:layout_height="@dimen/hundred_dp"
        android:layout_gravity="center"
        android:contentDescription="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/three_dp"
        android:src="@drawable/icon_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty_dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingTop="@dimen/ten_dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/signUpMobileNoAtViewCartActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:paddingTop="@dimen/ten_dp"
        app:errorEnabled="true"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextMAtViewCartActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/mobile_number"
            android:inputType="phone"
            android:maxLength="10"
            android:drawableRight="@drawable/ic_mobile"
            android:paddingTop="@dimen/ten_dp"
            android:paddingLeft="@dimen/five_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/large_font" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/signUpNameAtViewCartActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        android:paddingTop="@dimen/ten_dp"
        app:errorEnabled="true"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextNAtViewCartActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/signupname"
            android:inputType="text"
            android:drawableRight="@drawable/ic_person_black_24dp"
            android:paddingLeft="@dimen/five_dp"
            android:paddingTop="@dimen/ten_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/large_font" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/signUpEmailAtViewCartActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        app:errorEnabled="true"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextEMAtViewCartActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:paddingLeft="@dimen/five_dp"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:paddingStart="@dimen/three_dp"
            android:paddingTop="@dimen/ten_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/large_font" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/signUpPasswordAtViewCartActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/five_dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorAccent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editTextpasAtViewCartActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/five_dp"
            android:paddingStart="@dimen/three_dp"
            android:paddingTop="@dimen/ten_dp"
            android:textColor="@color/black"
            android:textSize="@dimen/large_font" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ten_dp"
        android:text="Accepting Terms and Condition"
        android:textColor="@color/lightBlue"
        />


        <Button
            android:id="@+id/signUpButtonAtViewCartActivity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dp"
            android:layout_marginTop="@dimen/fifteen_dp"
            android:text="@string/signuptext"
            android:onClick="onClickSignUpAtViewCart"
            android:background="@drawable/rec_gradiant"
            android:textColor="@color/white"
            android:textSize="@dimen/large_font" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten_dp"
            >

            <TextView
                android:id="@+id/accAtViewCartActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Have an Account?" />

            <TextView
                android:id="@+id/arrowbackidAtViewCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="signIn"
                android:layout_marginLeft="@dimen/five_dp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:textSize="20sp"
                android:onClick="arrowbackToLoginAtViewCartActivity"
                android:layout_alignBaseline="@id/accAtViewCartActivity"
                android:layout_toRightOf="@id/accAtViewCartActivity"

                />

        </RelativeLayout>




    </LinearLayout>






</RelativeLayout>