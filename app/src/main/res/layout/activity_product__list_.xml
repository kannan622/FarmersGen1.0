<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/unknown"
    android:orientation="vertical"
    tools:context=".fragment.Product_List_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >


        <android.support.v7.widget.Toolbar
            android:id="@+id/productListToolBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:id="@+id/leftArrow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/left" />
        </android.support.v7.widget.Toolbar>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:visibility="gone"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            android:padding="@dimen/five_dp">

            <TextView
                android:id="@+id/proListRating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/ten_dp"
                android:layout_alignBaseline="@id/proListBrandName1"
                android:background="@color/FragmentGreen"
                android:padding="@dimen/four_dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/proListBrandName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tamizhan Agri"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty_sp"
                android:textStyle="bold" />


            <com.like.LikeButton
                android:id="@+id/favIcon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                app:icon_size="25dp"
                app:icon_type="heart"></com.like.LikeButton>

        </RelativeLayout>


    </RelativeLayout>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true"   >

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:expandedTitleTextAppearance="@android:color/transparent"
                android:background="@color/white"
                android:fitsSystemWindows="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    >

                    <TextView
                        android:id="@+id/proListRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rating"
                        android:layout_alignParentLeft="true"
                        tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/proListBrandName"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_collapseMode="parallax"
                    android:text="Tamizhan Agro"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:background="@color/white" />

                    <com.like.LikeButton
                        android:id="@+id/favIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        app:icon_size="25dp"
                        app:icon_type="heart"></com.like.LikeButton>



                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/productListToolBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin">

                    <ImageView
                        android:id="@+id/leftArrows"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/left" />

                </android.support.v7.widget.Toolbar>



            </android.support.design.widget.CollapsingToolbarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brand Name"
                android:gravity="start"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Brand"
                android:gravity="center"
                />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="rating"
                    android:gravity="end"
                    />
            </RelativeLayout>

        </android.support.design.widget.AppBarLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_activity_product_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/five_dp"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_weight="1" />
    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:id="@+id/countPriceShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </FrameLayout>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordnatorLayoutForFav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>