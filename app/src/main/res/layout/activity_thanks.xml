<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ThanksActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/twenty_dp"
        >

        <ImageView
            android:id="@+id/thanksImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/thanks"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanks for the order, your order will be delivered within 24 hours, at your mentioned address."
            android:textSize="@dimen/twenty_sp"
            android:layout_marginTop="@dimen/ten_dp"
            android:textColor="@color/FragmentGreen"

            />
    </LinearLayout>

</RelativeLayout>